<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="@dimen/tab_bottom_h"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tab_label"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:textColor="@drawable/txt_main_tab"
        android:textSize="@dimen/txt_size_5" />

    <TextView
        android:id="@+id/tv_message_num"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="0"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tab_image"
        android:layout_alignRight="@+id/tab_image"
        android:textSize="6dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/shap_round_red_100dp"/>
</RelativeLayout>