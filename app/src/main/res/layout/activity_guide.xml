<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content"
        app:banner_pageChangeDuration="1000"
        app:banner_isNeedShowIndicatorOnOnlyOnePage="false"
        app:banner_isNumberIndicator="false"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@color/white"
        style="@style/BannerDefaultStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_guide_enter"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_16"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:background="@drawable/shap_main_50dp"
        android:text="立即体验"/>

</FrameLayout>
