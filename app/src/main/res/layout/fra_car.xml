<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:dividerHeight="0.5dp"
        android:listSelector="#00000000"
        android:longClickable="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_select_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/ic_weixuan" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_toRightOf="@id/iv_select_all"
            android:textColor="@color/txt_lv4"
            android:layout_alignBottom="@+id/tv_all"
            android:textSize="17sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_select"
            android:text="合计:"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_lv4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_all"
            android:text="¥"
            android:textColor="@color/price"
            android:textSize="17sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_flag"
            android:text="0.00"
            android:textColor="@color/price"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_go_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="去结算(0)"
            android:textSize="17sp"
            android:padding="13dp"
            android:textColor="@color/white"
            android:background="@color/price"/>
    </RelativeLayout>
</LinearLayout>
